model User {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  orders        Order[]
  password_hash String
  role          String @default("USER")
  magicTokens   MagicToken[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  deletedAt     DateTime?     @db.Timestamptz

  @@map("users")
}